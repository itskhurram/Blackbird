{
  "ConnectionStrings": {
    "BirdConnectionString": "Server=127.0.0.1;Port=5432;Database=BlackBird_Dev_dB;Userid=postgres;Password=miananwar;",
    "DefaultCommandTimeOutDurationSeconds": "100"
  },
  "TokenAuthentication": {
    "SecretKey": "secretkey_BlackBird03008460767",
    "Issuer": "BlackBirdSecurityIssuer",
    "Audience": "BlackBirdSecurityAudience",
    "TokenPath": "/Token",
    "CookieName": "access_token",
    "JWTTokenExpirationTimeInMinutes": "15",
    "JWTRefreshTokenKey": "refreshkey_BlackBirdSecurity",
    "JWTRefreshTokenExpirationTimeInMinutes": "60"
  },
  "OriginConfiguration": {
    "AllowOrigins": "*"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.PostgreSQL.Configuration" ],
    "MinimumLevel": "Information",
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": { "path": "Logs/log.txt" }
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "logging",
          "tableName": "BlackBirdLogs",
          "needAutoCreateTable": true
        }
      }
    ]
  },
  "Columns": {
    "message": "RenderedMessageColumnWriter",
    "message_template": "MessageTemplateColumnWriter",
    "level": {
      "Name": "LevelColumnWriter",
      "Args": {
        "renderAsText": true,
        "dbType": "Varchar"
      }
    },
    "raise_date": "TimestampColumnWriter",
    "exception": "ExceptionColumnWriter",
    "properties": "LogEventSerializedColumnWriter",
    "props_test": {
      "Name": "PropertiesColumnWriter",
      "Args": { "dbType": "Json" }
    },
    "machine_name": {
      "Name": "SinglePropertyColumnWriter",
      "Args": {
        "propertyName": "MachineName",
        "writeMethod": "Raw"
      }
    }
  },
  "AllowedHosts": "*"
}
